[Unit]
Description=JBoss Enterprise Application Platform
After=syslog.target network.target
Before=httpd.service

[Service]
Environment=LAUNCH_JBOSS_IN_BACKGROUND=1
EnvironmentFile=-/etc/jboss/jboss.conf
User=jboss
LimitNOFILE=102642
PIDFile=/var/run/jboss/jboss.pid
ExecStart=/opt/jboss/bin/launch.sh $WILDFLY_MODE $WILDFLY_CONFIG $WILDFLY_BIND
StandardOutput=null

[Install]
WantedBy=multi-user.target
